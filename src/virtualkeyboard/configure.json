        },
        "vkb-lang-sv_SE": {
            "label": "Swedish",
            "autoDetect": "input.lang-sv_SE != 'no'",
            "output": [ "privateFeature" ]
        },
        "vkb-lang-th_TH": {
            "label": "Thai",
            "condition": "features.thai",
            "output": [ "privateFeature" ]
        },
        "vkb-lang-tr_TR": {
            "label": "Turkish",
            "autoDetect": "input.lang-tr_TR != 'no'",
            "output": [ "privateFeature" ]
        },
        "vkb-lang-uk_UA": {
            "label": "Ukrainian",
            "autoDetect": "input.lang-uk_UA != 'no'",
